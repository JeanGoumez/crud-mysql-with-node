<%- include("layout/topbar.ejs") %>
<h1>Curso</h1>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <form action="/curso/update/<%= cursos.idcurso %>" method="POST">
          <input type="text" name="nombre" value="<%= cursos.nombre %>" placeholder="nombre" class="form-control mb-3" autofocus />
          <input type="text" name="codigo" value="<%= cursos.codigo%>" placeholder="codigo" class="form-control mb-3" />
          <input type="number" name="credito" value="<%= cursos.credito%>" placeholder="credito" class="form-control mb-3" />
          <input type="text" name="profesor" value="<%= cursos.profesor%>" placeholder="profesor" class="form-control mb-3" />
          <input type="text" name="estado" value="<%= cursos.estado%>" placeholder="estado" class="form-control mb-3" />

          <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
      </div>
    </div>
  </div>
</div>
